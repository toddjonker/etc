[user]
	name = Todd V. Jonker
	email = todd@toddjonker.net

[core]
	excludesfile = ~/etc/git/exclude
	pager = less -FMRiX

[color]
	ui = auto

[init]
	defaultBranch = main

[branch]
	autosetupmerge = always
	autosetuprebase = always

[push]
	default = simple
	recurseSubmodules = check

[rebase]
	autoStash = true

[diff]
	mnemonicprefix = true
	renames = true
	submodule = log

[rerere]
	enabled = true

[status]
	submodulesummary = 1

[submodule]
	recurse = true

[alias]
	co   = checkout
	cob  = checkout --track -b
	cp   = cherry-pick
	d6   = daga -6
	d20  = daga -20
	dag  = log --graph --format='format:%C(yellow)%h%C(reset) %C(blue)\"%an\" <%ae>%C(reset) %C(magenta)%cr%C(reset)%C(auto)%d%C(reset)%n%s' --date-order
	daga = log --graph --format='format:%C(yellow)%h%C(reset) %C(blue)\"%an\" <%ae>%C(reset) %C(magenta)%cr%C(reset)%C(auto)%d%C(reset)%n%s' --date-order --all
	lol  = log --graph --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr) %C(bold blue)<%an>%Creset' --abbrev-commit --date=relative
	lola = log --graph --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr) %C(bold blue)<%an>%Creset' --abbrev-commit --date=relative --all
	s    = status
	skip = rebase --skip
	sm   = switch main

[filter "lfs"]
	process = git-lfs filter-process
	required = true
	clean = git-lfs clean -- %f
	smudge = git-lfs smudge -- %f
